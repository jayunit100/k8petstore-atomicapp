{
      "id": "redissc",
      "kind": "ReplicationController",
        "apiVersion": "v1beta1",
            "desiredState": {
                    "replicas": SLAVE,
                    "replicaSelector": {"name": "redisslave"},
                        "podTemplate": {
                                  "desiredState": {
                                               "manifest": {
                                                              "version": "v1beta1",
                                                              "id": "redissc",
                                                            "containers": [{
                                                              "name": "slave",
                                                             "image": "jayunit100/k8-petstore-redis-slave:VERSION",
                                                                                                     "ports": [{"containerPort": 6379, "hostPort": 6380}]
                                                                                                                      }]
                                                                       }
                                                     },
                                  "labels": {
                                              "name": "redisslave",
                                              "uses": "redis-master"
                                                        }
                                      }
                      },
              "labels": {"name": "redisslave"}
}
